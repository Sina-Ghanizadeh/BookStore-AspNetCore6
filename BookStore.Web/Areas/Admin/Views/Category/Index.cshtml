@model IEnumerable<BookStore.Application.Contracts.Category.CategoryViewModel>
@{
    ViewData["Title"] = "Index";

}

<br />


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create"><i class="bi bi-plus-circle"> Create New Category </i></a>
        </div>

    </div>
</div>
<br />
<br />

<table class="table table-bordered table-striped" style="width:100%">

    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Creation Date</th>
            <th> Action </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="40%">@item.Name</td>
                <td width="20%">@item.DisplayOrder</td>
                <td width="20%">@item.CreatedDateTime</td>
                
                <td width="20%">
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-warning mx-2" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

