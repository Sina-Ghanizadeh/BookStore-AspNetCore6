@model IEnumerable<BookStore.Application.Contracts.Company.CompanyViewModel>
@{
    ViewData["Title"] = "Companies";

}

<br />


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Company" asp-action="Create"><i class="bi bi-plus-circle"> &nbsp; Create New Company </i></a>
        </div>

    </div>
</div>
<br />
<br />

<table id="tblData" class="table table-bordered table-striped" style="width:100%">

    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Phone Number</th>
            <th> Action </th>
        </tr>
    </thead>

    
</table>

@section Scripts{
    <script src="~/js/company.js">
    </script>
}